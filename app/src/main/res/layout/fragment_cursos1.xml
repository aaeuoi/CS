<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_cursos_detallados"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorGreenLight"
    android:orientation="vertical"
    tools:context=".actividades.CursosActivity"
    >

    <TextView
        android:id="@+id/detalles_destacado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorRojo"
        />

    <LinearLayout
        android:id="@+id/lineardatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/detalles_fabricante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:weightSum="33" />
        <LinearLayout
            android:id="@+id/lineardatos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="67">

            <LinearLayout
                android:id="@+id/linearnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/detalles_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorBrown"
                    android:textAlignment="center"
                    />
                <LinearLayout
                    android:id="@+id/linearresto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/detalles_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/detalles_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:id="@+id/detalles_subcategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearduracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="67"
                    >
                    <TextView
                        android:id="@+id/detalles_duracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/detalles_modalidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:padding="5dp"
                        />
                    <TextView
                        android:id="@+id/detalles_inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:padding="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/detalles_descripcion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:id="@+id/detalles_objetivos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:id="@+id/detalles_contenidos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/colorBlack"
        />
    <Button
        android:id="@+id/button_ver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/text_buttom_ver"
        android:background="@color/colorGray"
        android:clickable="false"
        android:focusable="false"
        android:text="@string/text_buttom_ver"
        />
</LinearLayout>

